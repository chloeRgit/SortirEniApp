{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container offset-3 col-6 mt-2 mb-5">
        <h1 style="font-family: 'Dancing Script', cursive; color: #042444;"> Se connecter</h1>
    </div>

    <div class="offset-3 col-6">

        {% if error %}
            <div class="alert alert-danger"> Identifiant ou mot de passe
                incorrect{# *{{ error.messageKey|trans(error.messageData, 'security') }}*/ #}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 login" >
                <p>Vous êtes connecté.e avec le mail : {{ app.user.username }}</p>
                <button class="btn btn-lg btn-outline-danger">
                    <a href="{{ path('app_logout') }}"> Se déconnecter</a>
                </button>
            </div>
            <br>
        {% endif %}

        <form class="login" method="post">
            <div>
                <label class="mb-1" for="inputEmail">Identifiant</label>
                <input type="texte" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       placeholder="email ou pseudo" autocomplete="email" required autofocus>
            </div>
            <div class="password">
                <label class="mt-3 mb-1" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>
                <button class="btn-action" type="button" id="buttonMDPL" onclick="Afficher('inputPassword', this.id)">
                    <i class="fas fa-eye"></i></button>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >


            <div class="option">
                <p></p>
                <div>
                    <a href="#">Mot de passe oublié</a>
                    <div class="checkbox mb-3">

                        <label>
                            <input class="mt-3" type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                </div>
            </div>
            <div class="button-container">
                <button class="btn-action" type="submit">
                    Connexion
                </button>
            </div>
        </form>

        <script src="{{ asset('JS/password_view.js') }}"></script>
    </div>
{% endblock %}
